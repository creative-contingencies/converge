function user_profile_goto() {
  global $user;
  if ($user->uid) {
    drupal_goto('user/' . $user->uid . '/edit/profile' );
  }
  else {
    return drupal_access_denied();
  }
}

function user_profile_redirect($path1, $path2) {
  global $user;
  if ($user->uid) {
    drupal_goto('user/' . $user->uid . '/' . $path1 . '/' . $path2 );
  }
  else {
    return drupal_access_denied();
  }
}

