function ordinalise($number) {
  if (in_array(($number % 100),range(11,13))){
    return $number.'th';
  } else {
    switch (($number % 10)) {
     case 1:
      return $number.'st';
      break;
    case 2:
      return $number.'nd';
      break;
    case 3:
      return $number.'rd';
    break;
    default:
      return $number.'th';
      break;
    }
  }
}

